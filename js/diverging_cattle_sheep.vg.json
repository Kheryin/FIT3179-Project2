{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Cattle and Sheep Exports per Quarter from 2016 â€“ 2020",
  "width":"container",
  "data": { "url": "https://raw.githubusercontent.com/Kheryin/FIT3179-Project2/main/data/AustraliaLivestockExportsData.csv"},
  "transform": [
    {"filter": {"field": "Species", "oneOf": ["Cattle", "Sheep"]}},
    {
 "calculate": "timeParse(datum['Date'], '%d/%m/%Y')",
 "as": "Date"
 },
    {"calculate": "datum.Species == 'Cattle' ? -datum.Quantity : datum.Quantity", "as": "Quantity"}
  ],
  
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Date","timeUnit":"yearquarter", "sort": "descending", "title": "Date"
    },
    "x": {
      "aggregate": "sum", "field": "Quantity",
      "title": "Quantity",
      "axis": {"labelExpr": "datum.label[0]>=0 ? datum.label : datum.label[1]+'00,000'"}
    },
    "color": {
      "field": "Species",
      "scale": {"range": ["#675193", "#ca8861"]},
      "legend": {"orient": "right", "title": null}
    }
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}
